{
  "name": "LeetBattle",
  "description": "1v1 LeetCode battles against your friends to improve your coding skills fast!",
  "homepage_url": "https://github.com/llagerlof/fresh-chrome-extension",
  "version": "2.0.5",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "minimum_chrome_version": "116",
  "content_scripts": [{
    "matches": ["https://leetcode.com/*"],
    "js": ["content.js"]}
],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://leet-battle.fly.dev/*"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
